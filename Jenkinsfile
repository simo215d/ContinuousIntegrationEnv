pipeline {
    agent any 
    stages {
        stage('Hello') {
            steps {
                echo 'Simon was here!!!1' 
            }
        }
        stage('Git?') {
            steps {
                echo 'Git is actually the first thing that happens because thats how it reads this file :P' 
            }
        }
        stage('Test') {
            steps {
                echo 'Did it fail or WIN!' 
            }
        }
        stage('Build') {
            steps {
                echo 'Docker goes brrrr' 
            }
        }
        stage('Deploy') {
            steps {
                echo 'simonweb.ninja is the place to be?' 
            }
        }
    }
}